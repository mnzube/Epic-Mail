{
  "name": "epic-mail",
  "version": "1.0.0",
  "description": "Exchange messages over the internet efficiently. ",
  "main": "server.js",
  "engines": {
    "node": "10.15.0",
    "npm": "6.4.1"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    }
  },
  "scripts": {
    "start": "node --require @babel/register ./server/server.js",
    "test": "nyc --reporter=html --reporter=text --timeout=1500 mocha --require @babel/register --require babel-polyfill  SERVER/test/* --exit",
    "dev": "nodemon --require @babel/register ./server/server.js",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "create": "node --require @babel/register SERVER/db/tables createTable"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnzube/Epic-Mail.git"
  },
  "author": "Michael Nzube",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mnzube/Epic-Mail/issues"
  },
  "homepage": "https://github.com/mnzube/Epic-Mail#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "pg": "^7.9.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.3.0"
  }
}
